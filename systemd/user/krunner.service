[Unit]
Description=KDE Plasma Workspace Application Launcher

[Service]
ExecStart=/usr/bin/krunner
ExecStop=/usr/bin/kquitapp5 krunner
KillMode=none
BusName=org.kde.krunner
Environment="DBUS_SESSION_BUS_ADDRESS=unix:path=%t/bus" XDG_CURRENT_DESKTOP=KDE KDE_FULL_SESSION=1 KDE_SESSION_VERSION=5

[Install]
Alias=launcher.service
